<?xml version="1.0" encoding="UTF-8"?>
<project name="nshmp-haz" default="javadoc" basedir=".">

	<description>
		nshmp-sha is a platform for seismic hazard calculations
	</description>

	<property name="src.dir" value="src/" />
	<property name="lib.dir" value="lib/" />
	<property name="classes.dir" value="classes/" />
	<property name="dist.dir" value="dist/" />
	<property name="javadoc.dir" value="../nshmp-haz.gh-pages/" />

	<path id="library.classpath">
		<fileset dir="${lib.dir}">
			<include name="**/*.jar" />
		</fileset>
	</path>


	<target name="build" depends="compile">
		<jar destfile="${dist.dir}nshmp-haz.jar">
			<fileset dir="${classes.dir}" />
			<zipgroupfileset dir="${lib.dir}" includes="*.jar" />
		</jar>
	</target>


	<target name="compile">

		<!-- Clean the classes/ directory -->
		<delete dir="${classes.dir}" />
		<mkdir dir="${classes.dir}" />

		<!-- Compile to classes/  -->
		<javac srcdir="${src.dir}"
		       destdir="${classes.dir}"
		       classpathref="library.classpath"
		       nowarn="true"
		       source="1.7"
		       target="1.7"
		       encoding="UTF-8"
		       debug="true" />

		<!-- Copy any non-Java resources -->
		<copy todir="${classes.dir}" includeEmptyDirs="false">
			<fileset dir="${src.dir}" excludes="**/*.java" />
			<fileset dir="${lib.dir}" excludes="**/*.jar" />
		</copy>

	</target>


	<target name="javadoc">

		<!-- Clean the docs directory; .git data preserved by defaultexcludes -->
		<delete includeEmptyDirs="true" failonerror="yes" verbose="no">
			<fileset dir="${javadoc.dir}" />
		</delete>

		<javadoc classpathref="library.classpath"
		         destdir="${javadoc.dir}"
		         author="true"
		         version="true"
		         use="true"
		         windowtitle="nshmp-haz"
		         doctitle="nshmp-haz"
		         maxmemory="512m"
		         verbose="false"
		         encoding="UTF-8"
		         docencoding="UTF-8"
		         charset="UTF-8">

			<fileset dir="${src.dir}" defaultexcludes="yes">
				<include name="**/*.java" />
			</fileset>

			<link href="http://docs.oracle.com/javase/7/docs/api/" />
			<link href="http://commons.apache.org/proper/commons-math/apidocs/" />
			<link href="http://docs.guava-libraries.googlecode.com/git-history/release/javadoc/" />

		</javadoc>
	</target>

</project>

